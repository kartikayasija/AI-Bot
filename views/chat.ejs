<%-include("partials/header.ejs")%>


<div class="his">
    <ul >
        <li><a class="btn btn-primary" href="/history">History</a> </li>
        <li><a class="btn btn-primary" href="/logout">Log Out</a></li>
    </ul>
</div>
<div class="glass">
    <h1>Ask Your Question??</h1>
    <h2>Hi! <%=name%> ,ask Some Question</h2>
    <div class="input">
        <form action="/" method="post">
            <input type="text" id="userBox" name="prompt" onkeydown="if(event.keyCode == 13){ talk()}"
                placeholder="Type your Question" />
            <button type="submit">Search</button>
        </form>

    </div>
    <!-- <p id="chatLog"><%=response%></p> -->


</div>
<div class="d-flex justify-content-center">
    <form style="width: 60%;">
        <textarea disabled class="alert alert-primary glass3 glow" name="ai-response" rows="10"
            cols="80"><%=response%></textarea><br><br>
    </form>
</div>

